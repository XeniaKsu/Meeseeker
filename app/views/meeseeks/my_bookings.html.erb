<div class="container">
  <div class="my_bookings row">
    <div class="profile_pic col-md-6 col-sm-12">
        <%= image_tag 'mr-meeseeks.png', class: 'meeseeker-my-bookings'%>
        <h1><%= current_user.email %></h1>
    </div>
    <div class="bookings col-md-6 col-sm-12">
      <h2>My bookings</h2>
        <ul>
          <% @my_bookings.each do |booking|%>
            <div class="my-booking-card flex-container">
              <div class="flex-item">
                <li>
                  <h4>Booking Task: <%= booking.task %></h4>
                  <h5>Meeseek: <%= booking.meeseek_id %></h5>
                  <p>From: <%= booking.date_available_from %> To: <%= booking.date_available_to %></p>
                  <h1>Review your Meeseek</h1>
                  <%= simple_form_for [@booking, @review] do |f| %>
                    <%= f.input :comment, placeholder: "How was it?"%>
                    <%= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "How was your experience", input_html: { data: { controller: "star-rating" } }  %>
                    <%= f.submit class: "btn btn-primary" %>
                  <% end %>
                </li>
              </div>
              <div class="flex-item">
                <%= link_to edit_meeseek_booking_path(booking.meeseek_id, booking.id) do %>
                <i class="fa-solid fa-pen-to-square", style="color:#A3B081"></i>
                <% end %>
                <i class="fa-solid fa-ban", style="color:#A3B081"></i>
              </div>
            </div>
          <% end %>
        </ul>
    </div>
  </div>
</div>
